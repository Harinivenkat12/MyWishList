<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#428484"
    tools:context="writetoandreadfromfile.myandroid.achitu.mywishlist.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/titleId"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:text="My Wish"
        android:textColor="#060606"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="195dp"
        android:id="@+id/titleEditTextId"
        android:layout_below="@+id/titleId"
        android:layout_marginTop="10dp"
        android:hint="Name your Wish"
        android:layout_centerHorizontal="true"
        android:layout_height="85dp" />

    <EditText
        android:layout_width="250dp"
        android:id="@+id/wishId"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:gravity="start"
        android:hint="Enter a wish.."
        android:layout_below="@+id/titleEditTextId"
        android:layout_marginTop="30dp"
        android:textStyle="italic"
        android:padding="10dp"
        android:layout_height="150dp" />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/submitBtnId"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:textColor="#010606"
        android:layout_below="@id/wishId"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />
</RelativeLayout>
