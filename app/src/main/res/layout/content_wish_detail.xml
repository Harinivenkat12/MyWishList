<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="myandroid.wishlist.WishDetail"
    tools:showIn="@layout/activity_wish_detail2">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/wishHeadingId"
        android:text="My wish.."
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="35dp"
        android:layout_marginTop="65dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/dateCreatedId"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:text="Created:"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_marginTop="85dp"
        android:layout_below="@+id/wishHeadingId"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/textContentId"
        android:layout_below="@+id/dateCreatedId"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />

</RelativeLayout>
